#!/bin/bash

PARENT_DIR="$(dirname "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)")"
source $PARENT_DIR/parameters

STOP_CMD="$DISTRO/bin/stop"

if [ -f "$STOP_CMD" ]; then
        $STOP_CMD
else
        echo "ODL hasn't been unpacked."
        exit 1
fi

echo "Stopping ODL."
while true;
do
        up=$(pgrep -f karaf)
        if [ ! -z "$up" ]
        then
		echo "!"
                echo "ODL has stopped"
                exit 0
        else
                printf "."
		sleep 1
        fi
done

